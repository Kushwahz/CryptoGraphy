<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vishalsingh.cryptography.c_encrypt_success">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ENCRYPTION SUCCESSFUL"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#159fc0"
        android:id="@+id/encryption_successful"
        android:layout_marginTop="39dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/locked"
        android:padding="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/cipherText_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Proceed to see the Cipher Text"
        android:id="@+id/Proceed_cipher"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/cipherText_button"
        android:layout_centerHorizontal="true" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="CIPHER TEXT"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:background="#2aa7dc"
        android:id="@+id/cipherText_button"
        android:layout_marginBottom="89dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
