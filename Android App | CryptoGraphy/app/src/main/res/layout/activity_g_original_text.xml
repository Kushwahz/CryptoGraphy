<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vishalsingh.cryptography.g_original_text">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DECRYPTED TEXT"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#159fc0"
        android:id="@+id/DecryptedText"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello how are you ???"
        android:textStyle="bold"
        android:textSize="16dp"
        android:id="@+id/original_text"
        android:layout_below="@+id/DecryptedText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Proceed to Encrypt another Text"
        android:id="@+id/Proceed_encrypt_again"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_above="@+id/encrypt_button_again"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ENCRYPT OTHER TEXT"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:background="#2aa7dc"
        android:id="@+id/encrypt_button_again"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
